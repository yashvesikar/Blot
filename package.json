    "parse5": "7.2.1",
    "path-to-regexp": "8.2.0",
    "pretty": "2.0.0",
    "proper-lockfile": "4.1.2",
    "puppeteer": "24.1.1",
    "pushover": "1.3.6",
    "rate-limit-redis": "2.0.0",
